<?xml version="1.0" encoding="UTF-8"?>
<!--
  Template settings.xml for local usage or CI.
  IMPORTANT: Do NOT commit real credentials. Replace the placeholders locally
  (~/.m2/settings.xml) or let the GitHub Actions `setup-java` step generate
  a settings.xml at runtime using secrets (recommended).
-->
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                              http://maven.apache.org/xsd/settings-1.0.0.xsd">

  <activeProfiles>
    <activeProfile>github</activeProfile>
  </activeProfiles>

  <profiles>
    <profile>
      <id>github</id>
      <repositories>
        <repository>
          <id>central</id>
          <url>https://repo.maven.apache.org/maven2</url>
        </repository>
        <repository>
          <id>github</id>
          <url>https://maven.pkg.github.com/OttoFidelis/nexo</url>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
      </repositories>
    </profile>
  </profiles>

  <servers>
    <!--
      Replace USERNAME and PASSWORD with your GitHub username and a PAT that has
      write:packages (or use the GITHUB_TOKEN in CI). Do NOT commit secrets.
      Example (local):
        <username>your-github-username</username>
        <password>ghp_xxx...</password>
    -->
    <server>
      <id>github</id>
      <username>REPLACE_WITH_USERNAME</username>
      <password>REPLACE_WITH_PASSWORD</password>
    </server>
  </servers>

</settings>
